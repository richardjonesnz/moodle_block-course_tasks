{{!
    @template block_coursetasks/course_users

    This template renders the content for the block.

    Classes required for JS:
    * user_form

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * addbutton string for add button
    * listing string for task list title
    * clearbutton string for clear button

    Example context (json):
    {
        "addbutton": "Add task",
        "listing": "Task list",
        "clearbutton": "Clear tasks"
    }
}}

<div id="main" class="container">
    <form id="block_coursetasks-task-form">
        <div class="input-field">
            <input type="text" name="task" id="block_coursetasks-task">
            <input type="submit" value="{{addbutton}}" class="btn btn-primary">
        </div>
    </form>
    <h4 id="block_coursetasks-task-title">{{listing}}</h4>
    <ul class="block_coursetasks-collection"></ul>
    <a href="#" class="block_coursetasks-clear-tasks btn btn-warning">{{clearbutton}}</a>
    {{#js}}
    require(['block_coursetasks/tasklist'],
        function(module) {
            module.get_tasks();
        }
    );
    {{/js}}
</div>